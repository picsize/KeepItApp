<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.picsize.keepItApp" version="1.0.0">
  <name>KeepitApp</name>
  <description>
    KeepitApp
  </description>
  <author href="http://www.picsize.co.il" email="shay@picsize.co.il">Picsize</author>
  <content src="index.html"/>

  <preference name="phonegap-version"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="handset"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="android-build-tool" value="gradle" />
  <preference name="SplashScreen" value="splash" />
  <preference name="SplashScreenDelay" value="4900" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="FadeSplashScreenDuration" value="50"/>
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarStyle" value="blackopaque" />

  <plugin name="cordova-plugin-console" source="npm"/>
  <plugin name="cordova-plugin-device" source="npm" />
  <!--<plugin name="cordova-plugin-geolocation" source="npm" />-->
  <plugin name="cordova-plugin-dialogs" source="npm" />
  <plugin name="cordova-plugin-inappbrowser" source="npm"/>
  <!--<plugin name="cordova-plugin-network-information" source="npm"/>-->
  <plugin name="cordova-plugin-splashscreen" source="npm" />
  <plugin name="cordova-plugin-globalization" source="npm" />
  <!--<plugin name="cordova-plugin-sim" source="npm"/>-->
  <plugin name="cordova-plugin-local-notifications-mm" source="npm"/>
  <plugin name="cordova-plugin-x-socialsharing" source="npm" />
  <plugin name="cordova-plugin-statusbar" source="npm"/>
  <plugin name="cordova-plugin-whitelist" source="npm" />

  <!--General Icon-->
  <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon.png" />

  <platform name="ios">
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon.png" width="57" height="57" />
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon-72.png" width="72" height="72" />
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon@2x.png" width="114" height="114" />
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon-72@2x.png" width="144" height="144" />
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon-120.png" width="120" height="120" />
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon-152.png" width="152" height="152" />
    <icon src="assets/icons-and-splash/iOS/Resources/icons/Icon-76.png" width="76" height="76" />

    <splash src="assets/icons-and-splash/iOS/Resources/splash/Default~iphone.png" width="320" height="480" />
    <splash src="assets/icons-and-splash/iOS/Resources/splash/Default@2x~iphone_640x960.png" width="640" height="960" />
    <splash src="assets/icons-and-splash/iOS/Resources/splash/Default-568h@2x~iphone_640x1136.png" width="640" height="1136" />
    <splash src="assets/icons-and-splash/iOS/Resources/splash/Default-Portrait~ipad_768x1024.png" width="768" height="1024" />
    <splash src="assets/icons-and-splash/iOS/Resources/splash/Default-Landscape~ipad_1024x768.png" width="1024" height="768" />
  </platform>

  <platform name="android">
    <icon src="assets/icons-and-splash/android/res/drawable-ldpi/icon.png" platform="android" qualifier="ldpi" />
    <icon src="assets/icons-and-splash/android/res/drawable-mdpi/icon.png" platform="android" qualifier="mdpi" />
    <icon src="assets/icons-and-splash/android/res/drawable-hdpi/icon.png" platform="android" qualifier="hdpi" />
    <icon src="assets/icons-and-splash/android/res/drawable-xhdpi/icon.png" platform="android" qualifier="xhdpi" />
    <icon src="assets/icons-and-splash/android/res/drawable-xxhdpi/icon.png" platform="android" qualifier="xxhdpi" />

    <splash src="assets/icons-and-splash/android/res/drawable-ldpi/screen.png" platform="android" qualifier="ldpi" />
    <splash src="assets/icons-and-splash/android/res/drawable-mdpi/screen.png" platform="android" qualifier="mdpi" />
    <splash src="assets/icons-and-splash/android/res/drawable-hdpi/screen.png" platform="android" qualifier="hdpi" />
    <splash src="assets/icons-and-splash/android/res/drawable-xhdpi/screen.png" platform="android" qualifier="xhdpi" />
    <splash src="assets/icons-and-splash/android/res/drawable-xxhdpi/screen.png" platform="android" qualifier="xxhdpi" />
  </platform>

  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>